#!/usr/bin/env python3
import subprocess
import toml
import os


def walk_git_files():
    with subprocess.Popen(
        ["git", "ls-files", "-o", "-c"], stdout=subprocess.PIPE
    ) as proc:
        for line in proc.stdout:
            yield line[:-1]


def wait_on_these(files):
    with subprocess.Popen(
        [
            "inotifywait",
            "--fromfile",
            "-",
            "-e",
            "modify",
            "-e",
            "create",
            "-e",
            "delete",
        ],
        stdin=subprocess.PIPE,
    ) as proc:
        for file_ in files:
            proc.stdin.write(file_)
            proc.stdin.write(b"\n")


def take_action():
    if os.path.exists("pyproject.toml"):
        with open("pyproject.toml", "r") as f:
            contents = toml.load(f)
        if contents.get("tool", {}).get("porg"):
            take_porg_action()
            return

    print("No actions defined")


def take_porg_action():
    run("porg format")
    run("porg test")
    run("porg check")


def run(cmd):
    print(f">>> {cmd}")
    subprocess.run(cmd, shell=True, check=True)


def main():
    try:
        while True:
            wait_on_these(walk_git_files())
            try:
                take_action()
            except subprocess.CalledProcessError:
                pass

    except InterruptedError:
        pass


if __name__ == "__main__":
    main()
